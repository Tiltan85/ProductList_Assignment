<UserControl x:Class="Presentation.WPF.Views.ProductAddView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.WPF.Views"
             
             xmlns:models="clr-namespace:Infrastructure.Models;assembly=Infrastructure"
             xmlns:viewmodels="clr-namespace:Presentation.WPF.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:ProductAddViewModel}"
             
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="500" d:DesignWidth="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
               Text="{Binding Title, FallbackValue= New Product}" 
               FontSize="20" 
               FontWeight="Bold" 
               VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="{Binding Error}" />
            <StackPanel Orientation="Horizontal">
                <Label Content="Product Name" />
                <TextBlock Text="{Binding FieldErrors[Name], UpdateSourceTrigger=PropertyChanged}" 
                   Foreground="Red" 
                   VerticalAlignment="Center" />
            </StackPanel>
            <TextBox Text="{Binding ProductRequestForm.ProductName, UpdateSourceTrigger=PropertyChanged}" Padding="5" />

            <StackPanel Orientation="Horizontal">
                <Label Content="Product Price" />
                <TextBlock Text="{Binding FieldErrors[Price], UpdateSourceTrigger=PropertyChanged}" 
                   Foreground="Red" 
                   VerticalAlignment="Center" />
            </StackPanel>
            <TextBox Text="{Binding ProductRequestForm.ProductPrice, UpdateSourceTrigger=PropertyChanged}" Padding="5" />

            <StackPanel Orientation="Horizontal">
                <Label Content="Product Description" />
                <TextBlock Text="{Binding FieldErrors[Description], UpdateSourceTrigger=PropertyChanged}" 
                   Foreground="Red" 
                   VerticalAlignment="Center" />
            </StackPanel>
            <TextBox Text="{Binding ProductRequestForm.ProductDescription, UpdateSourceTrigger=PropertyChanged}" Padding="5" />

            <StackPanel Orientation="Horizontal">
                <Label Content="Product Category" />
                <TextBlock Text="{Binding FieldErrors[Category], UpdateSourceTrigger=PropertyChanged}" 
                   Foreground="Red" 
                   VerticalAlignment="Center" />
            </StackPanel>
            <TextBox Text="{Binding ProductRequestForm.Category.CategoryName, UpdateSourceTrigger=PropertyChanged}" Padding="5" />

            <StackPanel Orientation="Horizontal">
                <Label Content="Product Manufacturer" />
                <TextBlock Text="{Binding FieldErrors[Manufacturer], UpdateSourceTrigger=PropertyChanged}" 
                   Foreground="Red" 
                   VerticalAlignment="Center" />
            </StackPanel>
            <TextBox Text="{Binding ProductRequestForm.Manufacturer.ManufacturerName, UpdateSourceTrigger=PropertyChanged}" Padding="5" />
        </StackPanel>

        <StackPanel Grid.Row="2">
            <Button Content="Save" Command="{Binding SaveCommand}" Padding="8" Margin="0 0 0 8" />
            <Button Content="Cancel" Command="{Binding CancelCommand}" Padding="8" />
            
        </StackPanel>

    </Grid>
</UserControl>
